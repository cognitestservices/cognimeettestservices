
<head>
	<link rel="stylesheet" href="css/style.css">
	<script>
		function welcome() {   
		url = window.location.protocol+'//'+window.location.host+'/signup'
		window.open(url,"_self");
		}  
	</script>
	<style>
	.Signupbutton button {
	margin-top: 2px;
    overflow: hidden;
    margin: 2px 0;
    position: relative;
	border-style: none;
	color: white;
	width: 100%;
	height: 50px;
	border-radius: 30px;
	background: palevioletred;
	outline: none;
	font-size: 20px;
	font-family: 'Montserrat', sans-serif;
	}
	</style>
</head>
<body style="background-image: url('Cognimeet_Assets/Login/MacBookPro-15.png');">
	<div class="container">
		<header><img src="../Cognimeet_Assets/Login/Group 2302.png" width="500px" /></header>
		<div class="login-heading">
		   Login
	   </div>
		<form action="/login" method="POST">
			<div class="input-field">
			<input class="emailpic" type="text" name="username" placeholder="username">
			</div>

			<div class="input-field">
			<input class="passwordpic" type="password" name="password" placeholder="password" required="">
			<!-- span class="show" style="color: rgb(17, 17, 17);"> <img src="../Cognimeet_Assets/Login/eye-make-up-1.png"/> </span -->
			</div>
			
			<a href="/forgot">
				<div class="forgotpassword"> Forgot password?</div>
			</a>
			<div class="button">
			<button>Login</button>
			</div>
	    </form>
	    <div class="Signupbutton" >
		<button onclick="welcome()">Signup</button>
		</div>
	</div>
	<script>
		var input = document.querySelector('.passwordpic');
		var show = document.querySelector('.show');
		show.addEventListener('click', active);
		function active(){
		  if(input.type === "password"){
			input.type = "text";
			show.style.color = "#1DA1F2";
		   //  show.textContent = "HIDE";
		  }else{
			input.type = "password";
		   //  show.textContent = "SHOW";
			show.style.color = "#111";
		  }
		}
	 </script>
</body>

 

